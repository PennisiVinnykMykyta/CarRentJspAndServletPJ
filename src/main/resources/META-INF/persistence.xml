<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="default">

        <class>com.example.fullstackpj.entities.Car</class>
        <class>com.example.fullstackpj.entities.User</class>
        <properties>
            <property name="toplink.jdbc.url"
                      value="jdbc:mysql://localhost:3306/fullstackpj?useSSL=false&amp;serverTimezone=Europe/Rome"/>
            <property name="toplink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="toplink.jdbc.user" value="root"/>
            <property name="hibernate.connection.url"
                      value="jdbc:mysql://localhost:3306/fullstackpj?useSSL=false&amp;serverTimezone=Europe/Rome"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="openjpa.ConnectionURL"
                      value="jdbc:mysql://localhost:3306/fullstackpj?useSSL=false&amp;serverTimezone=Europe/Rome"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.cj.jdbc.Driver"/>
            <property name="openjpa.ConnectionUserName" value="root"/>
            <property name="eclipselink.jdbc.url"
                      value="jdbc:mysql://localhost:3306/fullstackpj?useSSL=false&amp;serverTimezone=Europe/Rome"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="root"/>
        </properties>
    </persistence-unit>
</persistence>
